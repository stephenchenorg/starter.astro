---
interface Props {
  lineTagId: string
}

const { lineTagId } = Astro.props
---

<!--
  LINE Tag tracking code for Taiwan market.
  LINE Tag is essential for LINE advertising campaigns.
  Using `is:inline` attribute to prevent Astro optimizations.
-->
<script is:inline define:vars={{ lineTagId }}>
  (function(g,d,o){
    g._ltq=g._ltq||[];g._lt=g._lt||function(){g._ltq.push(arguments)};
    var h=location.protocol==='https:'?'https://d.line-scdn.net':'http://d.line-cdn.net';
    var s=d.createElement('script');s.async=1;
    s.src=o||h+'/n/line_tag/public/release/v1/lt.js';
    var t=d.getElementsByTagName('script')[0];t.parentNode.insertBefore(s,t);
  })(window, document);
  _lt('init', {
    customerType: 'lap',
    tagId: lineTagId
  });
  _lt('send', 'pv', ['LINEID']);
</script>
